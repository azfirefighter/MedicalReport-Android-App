    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="Name ?"
        android:inputType="textCapWords"
        android:key="info_name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Name : " />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="Number ? "
        android:inputType="number"
        android:key="info_number"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Number : " />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="Adress ? "
        android:key="info_adress"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Adress : " />


    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="Blood Group ? "
        android:key="info_bloodgroup"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Blood Group : " />



    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
