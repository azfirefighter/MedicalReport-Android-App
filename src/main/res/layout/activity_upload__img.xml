<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context="com.example.shiraz.medicalreport.Upload_Img_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ProgressBar

                android:layout_width="match_parent"
                android:id="@+id/upload_img_progress"
                android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/upload_img_image"/>

    <Button
        android:text="Add Report"
        android:layout_width="match_parent"
        android:background="#ff867f"
        android:layout_height="wrap_content"
        android:id="@+id/upload_img_submit"/>

        </LinearLayout>
    </ScrollView>



</LinearLayout>
